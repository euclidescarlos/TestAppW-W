<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Entrar com seu email e senha"
        android:textAlignment="textStart"
        android:textColor="#7c7c7c"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="308dp"
        android:layout_height="21dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Email"
        android:textAlignment="textStart"
        android:textColor="#646464"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="308dp"
        android:layout_height="21dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Senha"
        android:textAlignment="textStart"
        android:textColor="#646464"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="111dp"
        android:layout_height="41dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Login"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wineback" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="356dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:hint="Digite seu Email"
        android:inputType="textEmailAddress"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:textColorHint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="@id/textView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textView6"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#B18C8A8A"
        app:layout_constraintEnd_toEndOf="@id/emailEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/emailEditText"
        app:layout_constraintTop_toBottomOf="@id/emailEditText" />

    <EditText
        android:id="@+id/senhaEditText"
        android:layout_width="353dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:hint="Digite sua Senha"
        android:inputType="textPassword"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:textColorHint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="@id/textView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textView7"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#B18C8A8A"
        app:layout_constraintEnd_toEndOf="@id/senhaEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/senhaEditText"
        app:layout_constraintTop_toBottomOf="@id/senhaEditText" />

    <TextView
        android:id="@+id/textEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="Esqueceu a senha?"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/senhaEditText"
        app:layout_constraintTop_toBottomOf="@id/senhaEditText" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="353dp"
        android:layout_height="80dp"
        android:text="LOGIN"
        android:textSize="20sp"
        app:cornerRadius="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="NÃ£o possui conta?"
        android:textAlignment="textStart"
        android:textColor="#0D0D0D"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/textCadastrese"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Cadastre-se"
        android:textAlignment="textStart"
        android:textColor="#53B175"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>